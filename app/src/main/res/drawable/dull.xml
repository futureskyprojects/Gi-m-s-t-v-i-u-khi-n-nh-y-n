<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="500" android:exitFadeDuration="500">
    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <gradient android:endColor="#E2E2E2" android:startColor="#C9D6FF" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <gradient android:angle="180" android:endColor="#E2E2E2" android:startColor="#C9D6FF" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>